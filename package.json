{
  "name": "lab3",
  "version": "0.4.0",
  "description": "lab 3",
  "type": "module",
  "main": "index.js",
  "bin": {
    "dice": "./src/cli/dice-cli.js"
  },
  "scripts": {
  "test": "node --test test/**/*.test.js",
  "test:watch": "node --test --watch test/**/*.test.js",
  "lint": "eslint src/**/*.js test/**/*.js",
  "lint:fix": "eslint src/**/*.js test/**/*.js --fix",
  "format": "prettier --write \"src/**/*.js\" \"test/**/*.js\"",
  "format:check": "prettier --check \"src/**/*.js\" \"test/**/*.js\"",
  "docs": "jsdoc -c jsdoc.json",
  "docs:serve": "npx http-server ./docs/generated -p 8080",
  "quality": "node check-quality.js",
  "cli": "node src/cli/dice-cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/y3s1n/lab3-oop-javascript.git"
  },
